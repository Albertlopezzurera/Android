<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNinjaWarrior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ninja Warrior"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/bJugar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:onClick="pedirUsuarioJuego"
        android:text="Jugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNinjaWarrior" />

    <Button
        android:id="@+id/bPuntuaciones"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:onClick="actividadPuntuaciones"
        android:text="Puntuaciones"
        app:layout_constraintEnd_toEndOf="@+id/bJugar"
        app:layout_constraintStart_toStartOf="@+id/bJugar"
        app:layout_constraintTop_toBottomOf="@+id/bJugar" />

    <Button
        android:id="@+id/bSalir"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:onClick="salirJuego"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="@+id/bPuntuaciones"
        app:layout_constraintStart_toStartOf="@+id/bPuntuaciones"
        app:layout_constraintTop_toBottomOf="@+id/bPuntuaciones" />
</androidx.constraintlayout.widget.ConstraintLayout>